<odoo>
	
	<template id="imp_tickets">
        <t t-call="web.html_container">
			<t t-call="web.basic_layout">
				<div class="page">
					<t t-foreach="docs" t-as="o">
						<div class="text-center" style="margin-bottom:3em;">
							<h2><span t-field="o.name"/></h2>
						</div>	
						<t t-foreach="o.prod_id" t-as="pr">
							<div class="row" style="margin-bottom:1em;">
								<div class="col-3 text-center">
									<span t-field="pr.bar_code"/>
								</div>
								<div class="col-3 text-center">
									<span t-field="o.name"/>
								</div>
								<div class="col-3 text-center">
									<span>Valor unitario:</span>
								</div>
								<div class="col-3 text-center">
									<span t-field="docs.product_id.standard_price"/>
								</div>
							</div>
							<div style="margin-bottom:1.5em;" class="row">
								<div class="col-6">
									<img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128',pr.bar_code, 500, 120)" />
								</div>
								<div class="col-6" style="margin-top:2em;">
									<div class="row">
										<div class="col-6 text-center">
											<span>Cantidad:</span>
										</div>
										<div class="col-6 text-center">
											<span t-field="pr.can_prod"/>
										</div>
									</div>
									<div class="row" style="margin-top:1em;">
										<div class="col-6 text-center">
											<span>Total:</span>
										</div>
										<div class="col-6 text-center">
											<span t-field="pr.cost_tot"/>
										</div>
									</div>
								</div>
							</div>
							<div class="row" style="margin-bottom:1.5em;">
								<div class="col-3 text-center">
									<h6><span t-field="docs.product_id.default_code"/></h6>
								</div>
								<div class="col-3 text-center">
									<span t-field="docs.product_id.name"/>
								</div>
								<div class="col-3 text-center">
									<span>Fecha:</span>
								</div>
								<div class="col-3 text-center">
									<span t-field="pr.date_rea"/>
								</div>
							</div>
							<div class="row" style="margin-bottom:2em;">
								<div class="col-12 text-center">
									<span t-field="pr.hand_ope"/>
								</div>
							</div>
							<hr/>
							<br/>
						</t>
					</t>
				</div>
			</t>
		</t>
	</template>


</odoo>